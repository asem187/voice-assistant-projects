# OpenAI API Configuration (FICTIONAL - this API doesn't exist yet)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_REALTIME_API_URL=wss://api.openai.com/v1/realtime
OPENAI_MODEL=gpt-4o-realtime-preview-2024-10-01

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/voice_assistant
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# Audio Configuration
AUDIO_SAMPLE_RATE=24000
AUDIO_CHUNK_SIZE=1024
AUDIO_CHANNELS=1
AUDIO_FORMAT=int16
TEMP_AUDIO_DIR=./temp_audio

# Voice Activity Detection
VAD_THRESHOLD=0.5
VAD_MIN_SPEECH_DURATION=0.5
VAD_MIN_SILENCE_DURATION=1.0

# Application Configuration
APP_NAME=Realtime Voice Assistant
APP_VERSION=1.0.0
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Monitoring
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=txt,md,py,js,json,yaml,yml

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_RECONNECT_ATTEMPTS=5
WS_RECONNECT_DELAY=5
