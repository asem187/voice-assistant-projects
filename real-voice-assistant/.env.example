# OpenAI API Key (REAL API)
OPENAI_API_KEY=your_openai_api_key_here

# Database (SQLite - no setup needed)
DATABASE_URL=sqlite:///voice_assistant.db

# Voice Settings
VOICE_RATE=150
VOICE_VOLUME=0.9

# ElevenLabs API Key for high quality TTS
ELEVENLABS_API_KEY=your_11labs_api_key_here
# Voice name from ElevenLabs (e.g., Bella, Adam)
ELEVENLABS_VOICE=Bella

# Whisper model to use for speech recognition
WHISPER_MODEL=base
